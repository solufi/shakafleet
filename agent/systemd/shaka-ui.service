[Unit]
Description=Shaka UI (Next.js)
After=network.target shaka-vend.service
Wants=shaka-vend.service

[Service]
Type=simple
User=shaka
WorkingDirectory=/home/shaka/Shaka-main
Environment=NODE_ENV=production
Environment=PORT=3000
Environment=HOSTNAME=127.0.0.1
ExecStart=/usr/bin/npm run start
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
